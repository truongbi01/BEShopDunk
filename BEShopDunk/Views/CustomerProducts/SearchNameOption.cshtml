@model IEnumerable<BEShopDunk.Models.Product>


<style>
    #box {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .list-item {
        display: grid;
        grid-template-columns: repeat(4,1fr);
        gap: 20px;
        margin-bottom: 12px;
        width: 100%;
        height: auto;
    }

    .detail-item {
        background-color: #F8F8FF;
        margin: 13px;
        border-radius: 10px;
        padding: 24px 20px 16px 20px;
        text-decoration: none;
        color: black;
    }

        .detail-item:hover {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

        .detail-item img {
            object-fit: cover;
            width: 100%;
            border-radius: 10px;
        }
</style>
<div style="margin:10px auto;width:90%">
    @using (Html.BeginForm("SearchNameOption", "CustomerProducts", new { @class = "search-form" }))
    {
        <hr />
        <div class="row">
            <div class="layout-list-item">
                <div class="list-item">
                    @foreach (var sanpham in Model)
                    {

                        <div class="detail-item">
                            <img src="~/Content/Images/@sanpham.ImagePro">
                            <p>@sanpham.NamePro</p>
                            @sanpham.Price <sup>đ</sup> <span style="text-decoration-line: line-through; color: #86868B;">37.990.000<sup>đ</sup></span>
                            @Html.ActionLink("Mua", "Details", new { id = sanpham.ProductID }, new { @class = "btn btn-primary" })
                        </div>

                    }
                </div>
            </div>
            @{ Html.RenderAction("PartialCate");}
        </div>
    }
</div>
