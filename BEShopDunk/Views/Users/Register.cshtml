
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .page-login {
        max-width: 1185px;
        margin: auto;
        width: 100%;
        padding: 40px 15px 160px;
        display: flex;
    }

    .login-img {
        width: 53%;
    }
        .login-img img {
            width: 100%;
        }

    .page-login-main {
        background-color: white;
    }
    #button-login {
        width: 100%;
        border-radius: 8px;
        line-height: 48px;
        font-size: 15px;
    }
    .sex{
        display:flex;
        gap:5px;
    }
    #male{
        margin:0;
        border-radius:50%;
    }
    #female {
        margin: 0;
        border-radius: 50%;
    }
    /*Daymonthyear*/
    .dmy-mini {
        width: 150px;
        height: 40px;
        border-radius: 8px;
    }
    .date{
        display:flex;
        gap:5px;
    }
    .forgot-button{
        display:flex;
        align-items:baseline;
    }
        .forgot-button label {
            color: #1D1D1F;
            font-size:15px;
            line-height:24px;
            text-transform:capitalize;
        }
    .link_access {
        font-weight: 400;
        font-size: 15px;
        line-height: 24px;
        color: #0066CC;
        text-transform:capitalize;
        padding-left:10px;
    }
</style>
<div class="page-login-main">
    <div class="page-login">
        <div class="login-img">
            <img src="~/Content/Images/Register-img.jpeg" />
        </div>
        <div style="margin: 10px auto; width: 40%;">
            <h1 style="text-align: left;text-align:left; font-weight:600; font-size:30px">Đăng ký</h1>
            @using (Html.BeginForm("Register", "Users"))
            {
                @Html.ValidationSummary(true)
                <div class="mb-3 mt-3">
                    <label for="name" class="form-label" style="font-size:14px;">Tên:</label>
                    <input type="text" class="form-control" id="name" name="NameCus" required>
                </div>
                <div class="mb-3 mt-3">
                    <label for="email" class="form-label" style="font-size:14px;">Email:</label>
                    <input type="email" class="form-control" id="email" name="EmailCus" required>
                </div>
                <div class="sex">
                    <p style="font-weight:700; font-size:14px; ">Giới tính:</p>
                    <input type="checkbox" id="male" />
                    <label for="male">Nam</label>
                    <input type="checkbox" id="female" />
                    <label for="female">Nữ</label>
                </div>
                <p style="font-weight:700; font-size:14px;">Ngày sinh:</p>
                <div class="date">
                    <div class="day">
                        <select class="dmy-mini">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                            <option>9</option>
                            <option>10</option>
                            <option>11</option>
                            <option>12</option>
                            <option>13</option>
                            <option>14</option>
                            <option>15</option>
                            <option>16</option>
                            <option>17</option>
                            <option>18</option>
                            <option>19</option>
                            <option>20</option>
                            <option>21</option>
                            <option>22</option>
                            <option>23</option>
                            <option>24</option>
                            <option>25</option>
                            <option>26</option>
                            <option>27</option>
                            <option>28</option>
                            <option>29</option>
                            <option>30</option>
                            <option>31</option>
                        </select>
                    </div>
                    <div class="month">
                        <select class="dmy-mini">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                            <option>9</option>
                            <option>10</option>
                            <option>11</option>
                            <option>12</option>
                        </select>
                    </div>
                    <div class="year">
                        <select class="dmy-mini">
                            <option>1995</option>
                            <option>1996</option>
                            <option>1997</option>
                            <option>1998</option>
                            <option>1999</option>
                            <option>2000</option>
                            <option>2001</option>
                            <option>2002</option>
                            <option>2003</option>
                            <option>2004</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="pwd" class="form-label" style="font-size:14px;">Mật khẩu:</label>
                    <input type="password" class="form-control" id="pwd" name="PassCus" required>
                </div>
                <div class="mb-3 mt-3">
                    <label for="phone" class="form-label" style="font-size:14px;">Điện thoại</label>
                    <input type="text" class="form-control" id="phone" name="PhoneCus" required>
                </div>
                <button type="submit" class="btn btn-primary" id="button-login">Đăng ký</button>
            }
            <div class="forgot-button">
                <label>Bạn đã có tài khoản chưa?</label>
                <a href="~/Users/Login" class="link_access">Đăng nhập</a>
            </div>
        </div>
    </div>
</div>
